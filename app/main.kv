#:import UnaScreen views.UnaScreen
#:import Text widgets.labels.Text

<MainWid>:
    Screen:
        name: "screen_a"
        BoxLayout:
            orientation: "vertical"
            canvas:
                Color:
                    rgb: [1,0,0]
                Rectangle:
                    pos: self.pos
                    size: self.size
            Label:
                text: "Screen A"
            Button:
                text: "B"
                on_press: root.current = "screen_b"
            Button:
                text: "C"
                on_press: root.current = 'screen_c'
    Screen:
        name: "screen_b"
        BoxLayout:
            orientation: "vertical"
            canvas:
                Color:
                    rgba: (0, 1, 0, 0.5)
                Rectangle:
                    pos: self.pos
                    size: self.size
            Label:
                text: "Screen B"
            Text:
                text: "Sunday, Mar 19"
                font_size: app.fonts.size.h1
                color: app.colors.grey
                font_name: app.fonts.body
                size_hint_y: None
                height: dp(60)
                valign: 'bottom'
            Button:
                text: "A"
                on_press: root.current = "screen_a"
            Button:
                text: "C"
                on_press: root.current = "screen_c"
    UnaScreen: